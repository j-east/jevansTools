{
  "name": "roo-sniffer",
  "version": "1.0.0",
  "description": "A TypeScript-based HTTP/HTTPS proxy sniffer for monitoring API requests",
  "main": "dist/index.js",
  "bin": {
    "roo-sniffer": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "debug": "./scripts/debug-start.sh",
    "debug:stop": "pkill -f 'node.*cli.js' || true; pkill -f 'code.*proxy-server' || true"
  },
  "keywords": [
    "proxy",
    "sniffer",
    "http",
    "https",
    "mitm",
    "debugging"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-forge": "^1.3.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "node-forge": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
